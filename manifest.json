{
  "manifest_version": 3,
  "name": "ChatGPT Conversation Heatmap",
  "version": "1.0",
  "description": "Generate a heatmap of your ChatGPT conversations",
  "permissions": [
      "storage",
      "activeTab",
      "downloads",
      "unlimitedStorage"
  ],
  "host_permissions": [
      "https://chatgpt.com/*",
      "https://chat.openai.com/*"
  ],
  "action": {
      "default_popup": "/popup/popup.html",
      "default_icon": "/images/icon.png"
  },
  "background": {
      "service_worker": "background.js"
  }
}